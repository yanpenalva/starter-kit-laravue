#!/usr/bin/env bash

start_time=$(date +%s)
echo "ğŸ” Executando pre-commit hook..."

current_branch=$(git rev-parse --abbrev-ref HEAD)
[ "$current_branch" = "main" ] && { echo "ğŸš« Branch 'main' detectada. Pulando execuÃ§Ã£o."; exit 0; }

staged_files=$(git diff --name-only --cached --diff-filter=d)
[ -z "$staged_files" ] && { echo "ğŸš« Nenhum arquivo staged encontrado."; exit 0; }

container="starterkit-app"

check_container() {
  docker inspect -f '{{.State.Running}}' "$container" 2>/dev/null | grep -q '^true$' || { echo "âŒ Container '$container' nÃ£o estÃ¡ rodando."; exit 1; }
  docker exec "$container" sh -c 'exit 0' >/dev/null 2>&1 || { echo "âŒ docker exec falhou em '$container'."; exit 1; }
}

run_formatter() {
  local file="$1"
  [ -f "$file" ] || return 0
  echo "âœ¨ Formatando $file..."
  docker exec "$container" ./vendor/bin/pint "$file"
  git add "$file"
}

lint_js() {
  echo "ğŸ” Lintando arquivos JS/Vue..."
  docker exec "$container" npm run lint || { echo "âŒ Lint JS/Vue falhou."; exit 1; }
}

run_phpstan() {
  echo "ğŸ” Executando anÃ¡lise estÃ¡tica (Composer)..."
  docker exec "$container" composer run run:phpstan || { echo "âŒ Phpstan/Larastan falhou."; exit 1; }
}

run_tests() {
  local script="$1"
  echo "ğŸ§ª Rodando testes (composer $script)..."
  docker exec "$container" composer run "$script" || { echo "âŒ Testes falharam."; exit 1; }
}

check_container

php_changed=$(echo "$staged_files" | grep -E '\.php$' || true)
js_changed=$(echo "$staged_files" | grep -E '\.(js|vue)$' || true)

if [ -n "$php_changed" ]; then
  echo "$php_changed" | while read -r file; do
    [ -n "$file" ] && run_formatter "$file"
  done
fi

[ -n "$js_changed" ] && lint_js
[ -n "$php_changed" ] && run_phpstan

if [ -n "$php_changed" ]; then
  case "$current_branch" in
    hml) run_tests "test" ;;
    main) exit 0 ;;
    *) run_tests "test:coverage" ;;
  esac
fi

end_time=$(date +%s)
echo "âœ… Pre-commit finalizado com sucesso em $((end_time - start_time))s."
